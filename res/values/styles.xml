<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="background">@drawable/actionbar_bg</item>
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Text</item>
    </style>
    
    <style name="AppTheme.ActionBar.Text" parent="Widget.Sherlock.Light.ActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>